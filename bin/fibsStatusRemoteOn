#!/bin/bash
#---------------------------------------------------------------------------------------------------
# Startup FiBS engine on a given machine with specific log file.
#---------------------------------------------------------------------------------------------------
CLIENT="$1"
TASK="$2"
if [ "$CLIENT" == "" ] || [ "$TASK" == "" ]
then
  echo ""; echo " Please specify client and task as parameter. EXIT!"; echo ""
  exit 1
fi

isRunning=`ssh -x $CLIENT "ps auxw|grep fibsEngine.py|grep ${TASK}.cfg|grep -v grep|cut -d' ' -f1"`
if [ "$isRunning" != "" ]
then
  echo -n "RUNNING -- fibs engine (config:$TASK) is running on $CLIENT"
  isActive=`ssh -x $CLIENT "ps auxw|grep ${TASK}.py| grep -v grep"`
  if [ "$isActive" != "" ]
  then
    echo ""
    echo " >> Active: $isActive"
  else
    echo " >> Inactive."
  fi
  exit 1
else
  echo "No engine (config:$TASK) runs on $CLIENT."
fi

exit 0
