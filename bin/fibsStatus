#!/bin/bash
#---------------------------------------------------------------------------------------------------
# Check status of FiBS engine on this machine.
#---------------------------------------------------------------------------------------------------
TASK="$1"
if [ "$TASK" == "" ]
then
  echo ""; echo " Please specify task as parameter. EXIT!"; echo ""
  exit 1
fi

# setup FiBS
source /home/cmsprod/FiBS/setup.sh

isRunning=`ps auxw|grep fibsEngine.py|grep ${TASK}.cfg|grep -v grep|cut -d' ' -f1`
if [ "$isRunning" != "" ]
then
  echo "RUNNING -- fibs engine (config:$TASK) is running on $HOSTNAME"
else
  echo "No engine (config:$TASK) runs on $HOSTNAME."
fi

exit 0
