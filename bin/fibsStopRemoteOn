#!/bin/bash
#---------------------------------------------------------------------------------------------------
# Stop daemon for FiBS engine on a given machine with specific log file
#---------------------------------------------------------------------------------------------------
CLIENT="$1"
TASK="$2"
if [ "$CLIENT" == "" ] || [ "$TASK" == "" ]
then
  echo ""; echo " Please specify client and task as parameter. EXIT!"; echo ""
  exit 1
fi

# remove the engine on the remote machine
pid=`ssh -x $CLIENT \
     "ps auxw | grep fibsEngine.py | grep $TASK | grep -v grep | tr -s ' ' | cut -d ' ' -f2"`

if [ "$pid" == "" ]
then
  echo " No more engine on $CLIENT"
else
  echo " Kill Engine Pid $pid on $CLIENT"
  ssh -x $CLIENT "kill $pid"
fi

# kill task on the remote machine
pids=`ssh -x $CLIENT \
     "ps auxw | grep $TASK.py | grep -v grep | tr -s ' ' | cut -d ' ' -f2"`

if [ "$pids" == "" ]
then
  echo " No more task activity ($TASK) on $CLIENT"
else
  for pid in $pids
  do
    echo " Kill Task ($TASK) Pid $pid on $CLIENT"
    ssh -x $CLIENT "kill $pid"
  done
fi

exit 0
